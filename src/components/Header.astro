---
import { HeaderActions } from "@/components/HeaderActions";

interface Props {
  userEmail?: string;
  currentPath?: string;
}

const { userEmail, currentPath = "/" } = Astro.props;

const isActive = (checkPath: string) => {
  return currentPath === checkPath;
};
---

<header class="border-b">
  <div class="container mx-auto max-w-7xl px-4">
    <div class="flex h-16 items-center justify-between">
      <div class="flex items-center gap-6">
        <a href="/" class="text-xl font-bold text-foreground hover:text-foreground/80"> 10xCards </a>
        <nav class="hidden md:flex items-center gap-4">
          <a
            href="/generate"
            class={`text-sm font-medium transition-colors hover:text-foreground/80 ${
              isActive("/generate") ? "text-foreground" : "text-foreground/60"
            }`}
          >
            Generate
          </a>
          <a
            href="/flashcards"
            class={`text-sm font-medium transition-colors hover:text-foreground/80 ${
              isActive("/flashcards") ? "text-foreground" : "text-foreground/60"
            }`}
          >
            My Flashcards
          </a>
          <!-- <a
            href="/study"
            class={`text-sm font-medium transition-colors hover:text-foreground/80 ${
              isActive("/study") ? "text-foreground" : "text-foreground/60"
            }`}
          >
            Study
          </a> -->
        </nav>
      </div>

      {userEmail && <HeaderActions client:load userEmail={userEmail} />}
    </div>
  </div>
</header>
